{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles, sorted by date in descending order",
    "queries": [
      "author",
      { "topic": ["mitch", "cats", "paper"] },
      {
        "sort_by": [
          "created_at",
          "article_id",
          "title",
          "topic",
          "author",
          "votes",
          "comment_count"
        ]
      },
      "order"
    ],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object with an article of the specified id",
    "queries": [{ "comment_count": ["true"] }],
    "exampleResponse": {
      "article": {
        "article_id": 2,
        "title": "Sony Vaio; or, The Laptop",
        "topic": "mitch",
        "author": "icellusedkars",
        "body": "Text from the article..",
        "created_at": "2020-10-16T05:03:00.000Z",
        "votes": 0,
        "article_img_url": "URL pointing to image"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "serves an object of the specified article with the votes altered by the inc_votes amount (+/-)",
    "queries": [],
    "exampleInput": [{ "inc_votes": 10 }],
    "exampleResponse": {
      "article": {
        "article_id": 2,
        "title": "Sony Vaio; or, The Laptop",
        "topic": "mitch",
        "author": "icellusedkars",
        "body": "Text from the article..",
        "created_at": "2020-10-16T05:03:00.000Z",
        "votes": 10,
        "article_img_url": "URL pointing to image"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments on the specified article",
    "queries": [],
    "exampleResponse": {
      "comment_id": 1,
      "body": "Lobster pot",
      "article_id": 1,
      "author": "butter_bridge",
      "votes": 10,
      "created_at": "2020-10-16T05:03:00.000Z"
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts an object containing a valid username, and comment body, and serves it back to the user",
    "queries": [],
    "exampleInput": {
      "username": "butter_bridge",
      "body": "New Comment"
    },
    "exampleResponse": {
      "comment_id": 19,
      "body": "New Comment",
      "article_id": 1,
      "author": "butter_bridge",
      "votes": 0,
      "created_at": "2024-11-16T05:03:00.000Z"
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes the specified comment",
    "queries": []
  },
  "GET /api/users": {
    "description": "serves an array of all users in the database",
    "queries": [],
    "exampleResponse": [
      {
        "username": "icellusedkars",
        "name": "sam",
        "avatar_url": "A URL"
      },
      {
        "username": "rogersop",
        "name": "paul",
        "avatar_url": "A URL"
      }
    ]
  }
}
